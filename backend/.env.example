# PDFToolkit Backend Environment Variables
# Copy this file to .env and modify the values

# Application Settings
ENVIRONMENT=production
APP_NAME="PDFToolkit API"

# Security - CHANGE THESE IN PRODUCTION!
API_KEY=your-super-secret-api-key-here-change-this
ADMIN_API_KEY=your-admin-secret-key-here-change-this

# CORS Settings - Add your frontend domain
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,https://your-domain.com

# File Cleanup Settings (in minutes)
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_MINUTES=1440  # 24 hours
MAX_FILE_AGE_MINUTES=2880      # 48 hours

# Rate Limiting
RATE_LIMIT_REQUESTS=100        # requests per window
RATE_LIMIT_WINDOW=3600         # window in seconds (1 hour)

# Railway/Render specific
PORT=8000
